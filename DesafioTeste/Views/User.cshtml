@model IEnumerable<DesafioTeste.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Lista de Usuários</h2>

    <form asp-controller="User" asp-action="Generate" method="post" class="mb-4 text-center">
        <button type="submit" class="btn btn-success btn-lg">Gerar Usuário</button>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Gênero</th>
                    <th>Avatar</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Gender</td>
                        <td>
                            <img src="@user.Avatar" class="img-fluid rounded-circle" width="50" height="50" alt="Avatar">
                        </td>
                        <td class="text-center">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Editar</a>
                            <form asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<style>
    table th, table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        font-weight: bold;
    }

    .table th, .table td {
        border-color: #dee2e6;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>

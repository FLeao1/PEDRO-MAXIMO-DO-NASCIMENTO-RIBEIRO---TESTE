@model DesafioTeste.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
<h2>Editar Usuário</h2>

<form asp-controller="User" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
    </div>

    <div class="form-group">
        <label>Sobrenome</label>
        <input asp-for="LastName" class="form-control" value="@Model.LastName" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="form-group">
        <label>Gênero</label>
        <input asp-for="Gender" class="form-control" value="@Model.Gender" />
    </div>

    <div class="form-group">
        <label>Avatar</label>
        <img asp-for="Avatar" src="@Model.Avatar" value="@Model.Email" class="img-fluid rounded-circle" width="50" height="50" alt="Avatar">
    </div>
    <input type="text" type="hidden" asp-for="Avatar" class="form-control" value="@Model.Avatar" />

    <button type="submit" class="btn btn-success">Salvar</button>
</form>

<form asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger">Excluir</button>
</form>
